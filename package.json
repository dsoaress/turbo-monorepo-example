{
  "name": "turbo-monorepo-example",
  "author": "Daniel Soares <daniel.soares@me.com>",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:server": "turbo run build --scope @dsoaress/server",
    "build:web": "turbo run build --scope @dsoaress/web",
    "dev": "turbo run dev --parallel",
    "dev:server": "turbo run dev --scope @dsoaress/server",
    "dev:web": "turbo run dev --scope @dsoaress/web",
    "start": "turbo run start --parallel",
    "start:server": "turbo run start --scope @dsoaress/server",
    "start:web": "turbo run start --scope @dsoaress/web",
    "lint": "yarn format && turbo run lint",
    "format": "prettier --write \"**/*.{js,md,json}\" --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@dsoaress/eslint-config-base": "*",
    "@dsoaress/prettier-config-base": "*",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "turbo": "1.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "prettier": "@dsoaress/prettier-config-base",
  "eslintConfig": {
    "extends": [
      "@dsoaress/eslint-config-base"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,md,json}": "prettier --write --ignore-path .gitignore",
    "*.{ts,tsx}": "eslint --fix"
  }
}
